nav
  position: absolute
  .logo
    width: 20%
    height: auto

    @media (max-width: 991px)
      width: 15%
    @media (max-width: 768px)
      width: 25%
    img
      width: 100%
  .navmenu
    position: absolute
    right: 10%
    top: 50%
    transform: translate3d(10%, -50%, 0)
    @media (max-width: 991px)
      position: relative
      right: 0
      top: 0
      transform: none

    a
      color: white
      &:hover
        text-decoration: none
        border-bottom: 2px solid #fff
  .container
    position: relative

